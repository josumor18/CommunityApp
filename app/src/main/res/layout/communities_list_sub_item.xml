<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp">

            <ImageView
                android:id="@+id/imageView"
                app:srcCompat="@drawable/ic_subdirectory_arrow_right_black_24dp"
                android:layout_width="38dp"
                android:layout_height="39dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="-50dp"
                android:layout_toStartOf="@+id/img_CommListItem" />

            <ImageView
                android:id="@+id/img_CommListItem"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="50dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/imgAdminIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="102dp"
                app:srcCompat="@drawable/ic_settings_black_24dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_toEndOf="@+id/img_CommListItem"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtCommListItem"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|center"
                    android:text="Nombre de comunidad"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>