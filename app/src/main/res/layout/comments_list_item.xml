<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_Comment"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="12dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/user_rounded_photo" />

        <TextView
            android:id="@+id/txtUserComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img_Comment"
            android:text='"Usuario" dijo:'
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtCommentDescription"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtUserComment"
            android:layout_below="@+id/txtUserComment"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:singleLine="false"
            android:text="Contenido"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_Report"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:layout_below="@id/img_Comment"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_delete_forever_black_24dp" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>