<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/colorPrimaryLight">

            <TextView
                android:id="@+id/txtFechaEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:text="00/00"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtCommName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="3dp"
                android:text="Comunidad 1"
                android:textColor="@android:color/background_light"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtEventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCommName"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="2dp"
                android:text="TextView"
                android:textColor="#434343"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEventHours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtEventName"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="2dp"
                android:text="15:00 - 20:00"
                android:textColor="#666666"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtEventTerminado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/txtEventName"
                android:layout_marginRight="5dp"
                android:layout_marginTop="1dp"
                android:text="Terminado"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="italic" />
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>