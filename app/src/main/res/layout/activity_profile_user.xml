<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="elcarmen.project.community.Business.ProfileUserActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgView_userProfile"
                android:layout_width="150dp"
                android:layout_height="125dp"
                android:layout_gravity="center_vertical|center_horizontal|center"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/user_box_photo" />

            <TextView
                android:id="@+id/txt_nameUserProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:fontFamily="monospace"
                android:text="Nombre"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_tel1UserProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"

                    android:layout_gravity="center_vertical|center_horizontal"
                    android:ems="10"

                    android:fontFamily="monospace"
                    android:text="Cel"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/txt_tel1UserProfile"
                    app:srcCompat="@drawable/ic_cell_phone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/txt_tel2UserProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:ems="10"
                    android:fontFamily="monospace"

                    android:text="Tel"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/txt_tel2UserProfile"
                    app:srcCompat="@drawable/ic_phone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_addressUserProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:ems="10"
                    android:fontFamily="monospace"
                    android:singleLine="false"
                    android:text="Direccion"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/txt_addressUserProfile"
                    app:srcCompat="@drawable/ic_home_black_24dp" />
            </RelativeLayout>


            <Button
                android:id="@+id/btn_ejectUser"
                style="@android:style/Widget.Material.Light.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_borders_default_button"
                android:onClick="ejectUser"
                android:text="Expulsar Usuario"
                android:textColor="@color/colorGrayTab" />
        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
