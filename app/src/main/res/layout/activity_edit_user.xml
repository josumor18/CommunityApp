<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="elcarmen.project.community.Business.EditUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imgBut_user"
            android:layout_width="150dp"
            android:layout_height="125dp"
            android:layout_gravity="center_vertical|center_horizontal|center"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/user_box_photo" />

        <EditText
            android:id="@+id/edt_nameUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_tel1User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Tel 1"
            android:inputType="phone"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edt_tel2User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Tel 2"
            android:inputType="phone"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/edt_addressUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="Address"
            android:inputType="textMultiLine|textPostalAddress"
            android:textAlignment="center" />

        <CheckBox
            android:id="@+id/check_privateUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Mantener la informaciÃ³n privada" />

        <Button
            android:id="@+id/btn_saveEditUser"
            style="@android:style/Widget.Material.Light.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:background="@color/colorPrimary"
            android:onClick="saveChangesClicked"
            android:text="Guardar cambios"
            android:textColor="@color/colorGrayTab" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
