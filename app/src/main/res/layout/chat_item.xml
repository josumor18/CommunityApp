<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtContactName_Message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="Nombre de usuario"
                android:textColor="@color/button_Request_Community"
                android:textSize="12sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgContactMessage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/txtUserMessage"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/user_rounded_photo" />

                <TextView
                    android:id="@+id/txtContactMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="50dp"
                    android:layout_toRightOf="@+id/imgContactMessage"
                    android:background="@drawable/rounded_contact_message"
                    android:padding="10dp"
                    android:text=" Este es un mensaje "
                    android:textColor="@android:color/background_dark" />

                <TextView
                    android:id="@+id/txtUserMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/rounded_user_sending_message"
                    android:padding="10dp"
                    android:text=" Este es un mensaje "
                    android:textColor="@android:color/background_light" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtMessageContactDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:text="1/10/2018 3:45"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txtMessageUserDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="1/10/2018 3:45"
                    android:textSize="10sp" />

                <ImageView
                    android:id="@+id/imgClock"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:paddingTop="1dp"
                    app:srcCompat="@drawable/ic_access_time_black_24dp" />
            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>