<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Business.CommunityProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#80EFEFEF">

            <EditText
                android:id="@+id/edtxtSearchProfile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentRight="false"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_edit_text"
                android:ems="10"
                android:hint="Buscar miembros"
                android:paddingLeft="15dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/btnSearchProfile"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_search_selected" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/lvProfileSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </ListView>

            <ProgressBar
                android:id="@+id/pbSearchProfile"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible" />


        </RelativeLayout>
    </LinearLayout>

</FrameLayout>